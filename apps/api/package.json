{
  "name": "@flagkit/api",
  "version": "0.1.0",
  "private": true,
  "description": "FlagKit API - Fastify backend server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "analytics:generate": "tsx src/scripts/generate-sample-analytics.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.3.0",
    "@fastify/websocket": "^11.2.0",
    "@paralleldrive/cuid2": "^3.0.4",
    "bcrypt": "^6.0.0",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@flagkit/config": "workspace:*",
    "@flagkit/database": "workspace:*",
    "@flagkit/types": "workspace:*",
    "@prisma/client": "^6.19.0",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "eslint": "^8.56.0",
    "pino-pretty": "^13.1.2",
    "supertest": "^7.1.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.8"
  }
}
